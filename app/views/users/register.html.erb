<html>
<head>
  <title></title>
  <style type="text/css">
    body{
        font-family: 'Open Sans', sans-serif;
        background-color: #E1E0E0;
        text-align:center;
      }

      p{
        font-size:12px;
        text-decoration: none;
        color:#ffffff;
      }

      h1{
        font-size:1.5em;
        color:#525252;
      }

      .box{
        background: white;
        width:300px;
        border-radius:6px;
        margin: auto;
        padding:0px 0px 50px 0px;
        border: #20e326 4px solid; 
      }

      #username{
        background:#ecf0f1;
        border: #ccc 1px solid;
        border-bottom: #ccc 2px solid;
        padding: 8px;
        width:250px;
        color:#AAAAAA;
        margin-top:10px;
        font-size:1em;
        border-radius:4px;
      }

      #password{
        margin-top: 15px;
        border-radius:4px;
        background:#ecf0f1;
        border: #ccc 1px solid;
        padding: 8px;
        width:250px;
        font-size:1em;
      }

      #email{
        background:#ecf0f1;
        border: #ccc 1px solid;
        border-bottom: #ccc 2px solid;
        padding: 8px;
        width:250px;
        color:#AAAAAA;
        margin-top:10px;
        font-size:1em;
        border-radius:4px;
      }

      .btn{
        background:#20e326;
        width:125px;
        padding:5px 5px;
        color:white;
        border-radius:4px;
        border: #27ae60 1px solid;
        margin-top:20px;
        float:center;
        margin-left:16px;
        font-weight:800;
        font-size:0.8em;
      }

      .btn:hover{
        background:#2CC06B; 
      }

  </style>
</head>
<body>
<%= form_tag(users_attempt_register_path, :method => "post") %>
<div class="box">
  <h1>Signup Panel</h1>
  <%= text_field_tag(:username, 'username', placeholder: 'username') %>
  <%= text_field_tag(:email, 'email', placeholder: 'email') %>
  <%= password_field_tag(:password, 'password', placeholder: 'password') %>
  <%= submit_tag('Register', class: 'btn')%>
  
</div> <!-- End Box -->

<p>Forgot your password? <u style="color:#f1c40f;">Click Here!</u></p>
  
</body>
</html>